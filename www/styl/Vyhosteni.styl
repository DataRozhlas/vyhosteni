ol.vyhosteni
  width 610px
  list-style-type none
  margin 10px
  padding 0px
  position relative
  margin-top 60px
  height 290px
  float left
  li:nth-child(10) ~ li
    display none
  li
    position absolute
    width 610px
    height 30px
    div.bar-container
      position absolute
      bottom 0px
      left 140px
      float left
      width (610px - 140)
      height 25px
    div.bar
      position absolute
      height 18px
      border-right 2px solid #8
      border-top 1px solid #c
      border-bottom 1px solid #c
      border-top-right-radius 5px
      border-bottom-right-radius 5px
      background white
      transition background 0.4s
      .count
        display block
        position absolute
        font-size 13px
        font-weight bold
        left 100%
        padding-left 10px
        color black
        white-space nowrap
    span.title
      position absolute
      width 140px
      bottom 7px
      padding-right 10px
      text-align right
    div.details
      position absolute
      bottom 40px
      left 134px
      width (610px - @left)
      .col
        float left
        width 36px
        height 35px
        font-size 11px
        text-align center
        position relative
        .line
          position absolute
          width 100%
          left 0px
          text-decoration underline
        .year
          position absolute
          bottom -12px
          width 100%
          left 0px
  li
    transform translate(0, -60px)
    transition transform 0.4s, height 0.4s
    div.details
      opacity 0
      transition opacity 0.4s
  li:hover
    height 90px
    span.title
      font-weight bold
    div.details
      opacity 1
    div.bar
      background #e
      // border-top 1px solid #3
      // border-bottom 1px solid #3
  li:hover ~ li
    transform translate(0)
ol.vyhosteni.all
  li:nth-child(10) ~ li
    display list-item
  li:nth-child(30) ~ li
    display none
button.more-button
  float left
  margin-left 150px
  width (610px - 150px)
  background white
  font-family Roboto, sans-serif
  padding 6px 10px
  border 1px dashed #b
  color #6
  &:hover
    background #fa
    cursor pointer
